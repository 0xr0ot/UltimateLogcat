<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="colorControlActivated">@color/theme_accent</item>
        <item name="android:autoCompleteTextViewStyle">@style/ToolbarEditText</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>

		<!-- TOOLBAR -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
		
    </style>
	
	<style name="AppTheme.Base.Dark" parent="Theme.AppCompat" >
		<item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">?colorPrimary</item>

		<!-- TOOLBAR -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
	</style>

    <style name="AppTheme" parent="AppTheme.Base" />
		
	<style name="AppTheme.Dark" parent="AppTheme.Base.Dark" />

    <style name="HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#6fff</item>
    </style>

    <style name="ToolbarEditText" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColorHint">#5fff</item>
    </style>

</resources>
